@model Customer_Project_Administration_Application.ViewModels.ProjectFolder.ProjectsViewModel


@{
    ViewData["Title"] = "All Projects";
}

<h1>Projects</h1>
<table class="table">
    <tr>
        <th>Owned by</th>
        <th>Id</th>
        <th>Name</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>

    @foreach (var project in Model.Projects)
    {
        <tr>
            <td>@project.Customer.Name</td>
            <td>@project.Id</td>
            <td>@project.Name</td>
            <td><i class='bx bxs-edit-alt text-primary'><a asp-controller="Project" asp-action="Edit" asp-route-id="@project.Id"></a></i></td>
            <td><i class='bx bxs-message-square-x text-danger'><a asp-controller="Project" asp-action="Delete" asp-route-id="@project.Id"></a></i></td>
        </tr>
    }
</table>
<a class="btn btn-primary" asp-controller="Project" asp-action="New">
    Add Project
</a>

