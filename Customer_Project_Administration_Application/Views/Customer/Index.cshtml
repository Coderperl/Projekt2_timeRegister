@model Customer_Project_Administration_Application.ViewModels.CustomerFolder.CustomersViewModel


@{
    ViewData["Title"] = "All Customers";
}

<h1>All Customers </h1>
<table class="table">
<tr>
    <th>Id</th>
    <th>Name</th>
    <th>Edit</th>
    <th>Delete</th>
</tr>

    @foreach (var cust in Model.Customers)
    {
        <tr>
            <td>@cust.Id</td>
            <td>@cust.Name</td>
            <td><a asp-controller="Customer" asp-action="Edit" asp-route-id="@cust.Id"><i class='bx bxs-edit-alt' text-primary></i></a></td>
            <td>
                <form method="post">
                    <button class="border-0 bg-transparent" asp-controller="Customer" asp-action="Delete" asp-route-id="@cust.Id" type="submit"> <i class='bx bxs-message-square-x text-danger'></i></button>
                </form>
            </td>
        </tr>
    }
</table>
<a class="btn btn-primary" asp-controller="Customer" asp-action="Create">Add Customer</a>

